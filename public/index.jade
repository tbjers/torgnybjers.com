- var p = 0
for post, slug in public.posts._data
  if post.layout !== false
    if p++ == 0
      section#one
        header.major
          h2= post.title
          if post.byline
            p= post.byline
              |  
              != partial('_partials/blog-tags', { tags: post.tags })
          if post.description
            p= post.description
          ul.actions
            li
              a(href="/posts/#{ slug }.html").button Read More
    else if p < 3
      section
        header
          h4= post.title
          if post.byline
            p= post.byline
              |  
              != partial('_partials/blog-tags', { tags: post.tags })
        if post.description
          p= post.description
        ul.actions
          li
            a(href="/posts/#{ slug }.html").button.small Read More

