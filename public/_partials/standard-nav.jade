- var filter = /(\.html$)/;
- var replace = /(\.html$)|(^index\.html$)/;

mixin tree(head, tail)
  for val, key in head
    if key !== '.git' && key !== '_data'
      if key == '_contents'
        each file in val
          if filter.test(file) && !/^404\.html/.test(file)
            - file = file.replace(replace, "");
            if file && tail === "/tags/"
              li
                a(href="#{ tail + file }.html") #{file.charAt(0).toUpperCase() + file.slice(1)}
      else
        mixin tree(val, tail + key + "/")

ul
  mixin tree(public, "/")
