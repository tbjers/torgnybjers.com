- posts = []
for post, slug in public.posts._data
  if post.date
    - post.slug = slug
    - posts.push(public.posts._data[slug])

//- Iterate over the posts array
each post, i in posts.sort(function(a,b){ a = new Date(a.date); b = new Date(b.date); return b>a?-1:b<a?1:0; }).slice(0, postlimit)
  //- post slug is the old object key that matched the file name,
  //- Like "a-post" for example
  //- Match it against the current page
  if post.slug == current.source
      //- Previous is one before this array item
      //- Next is one after
      //- Variables make it easy to template
      - prev = posts[i - 1]
      - next = posts[i + 1]
      //- The actual links
      ul.post-nav
        if prev
          li
            a.prev(href="#{ prev.slug }.html", title="#{ prev.title }") Previous Post
        if next
          li
            a.next(href="#{ next.slug }.html", title="#{ next.title }") Next Post
